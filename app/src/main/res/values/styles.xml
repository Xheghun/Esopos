<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>
    <style name="Widget.Esopos.TextInputLayout.FilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="hintTextAppearance">@style/TextAppearance.Esopos.TextField</item>
    </style>
    
    <!--Buttons -->
    <style name="Widget.Esopos.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">start</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/colorTextSecondary</item>
    </style>
    
    <style name="Widget.Esopos.RaisedButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorTextFieldSecondary</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
    </style>

    <style name="profile_btn" parent="Widget.Esopos.TextButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="cornerRadius">0dp</item>
    </style>
    <!-- -->
    
    
    
    <!--Text Appearance -->
    <style name="TextAppearance.Esopos.TextView" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="TextAppearance.Esopos.TextField" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>
    <style name="TextAppearance.Esopos.Header" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:fontFamily">@font/open_sans_extra_bold</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- -->
    <style name="blue_circle">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/blue_circle</item>
    </style>
    <style name="green_circle" parent="blue_circle">
        <item name="android:background">@drawable/green_circle</item>
    </style>
    <style name="orange_circle" parent="green_circle">
        <item name="android:background">@drawable/orange_circle</item>
    </style>
    <style name="view_details_text">
        <item name="android:background">@drawable/curved_rect</item>
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="card_title">
        <item name="android:background">@drawable/curve_top_corner</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:elevation" tools:targetApi="lollipop">4dp</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">18dp</item>
    </style>
    <style name="table_card_style">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="details_btn" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
    </style>
    <style name="pink_table_heading">
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_margin">0.5dp</item>
    </style>
    <style name="collapsible_layout_heading">
        <item name="android:background">@drawable/rect_outlined</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:drawableStart">@drawable/ic_collapse_plus</item>
        <item name="android:drawablePadding">2dp</item>
    </style>
    <style name="collapsible_layout_content">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:colorBackground">@color/colorWhite</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="text1">
        <item name="android:drawablePadding">4dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">12sp</item>
		<item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="text_2">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="outlined_edit_text" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>
</resources>
